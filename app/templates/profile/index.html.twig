
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>
    <div>User Info:</div>
    <ul>
        <li>Username: {{ user.username }}</li>
        <li>Email: {{ user.email }}</li>
        <!-- Display other user info as needed -->
    </ul>

    <h2>Records</h2>
    {% for game, records in recordsByGame %}
        <h3>{{ game }}</h3>
        <ul>
            {% for record in records %}
                <li>{{ record.details }}</li> <!-- Adjust based on your record structure -->
            {% endfor %}
        </ul>
    {% else %}
        <p>No records found.</p>
    {% endfor %}
{% endblock %}
