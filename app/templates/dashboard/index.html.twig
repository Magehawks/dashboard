{% extends 'base.html.twig' %}
{% block title %}Startseite - CouchRunGaming{% endblock %}

{% block body %}
    <div class="container">
        <main class="sidebar">
            <h3>Player Records</h3>
            <div class="record">
                <tbody>
                {% for record in records %}
                    <tr>
                        <td>
                            <a href="/scoreboard/game/{{ record.game.id }}/records">
                                {% if record.player.isRegistered %}
                                    <span class="badge">Crew Member</span>
                                {% endif %}  <img style="width: 50px" src="/images/{{ record.game.image }}" alt="{{ record.game.name }}" class="game-image"> {{ record.player.username }}{{ record.points }}{{ record.category.name }}{{ record.time ? record.time|date('H:i:s') : '' }}</a><br></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No records found.</td>
                    </tr>
                {% endfor %}
            </div>
            <!-- More player records can be added here -->
        </main>
        <aside class="main-content">
            {% include 'news/index.html.twig' %}
            <!-- More news items can be added here -->
        </aside>
    </div>

{% endblock %}